<h1> All Articles </h1>

<ul id="articles"> 
<% @article.each do |article| %>
<li id="article-title">
 <%= article.title %>
</li>
<li id="article-body">
  <%= article.body %>
</li>
<%= link_to 'Show', article_path(article) , id: "show" %>
<%= link_to 'Edit', edit_article_path(article) , class: "edit" %>
<%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>
</ul>

<%= link_to "New Article", new_article_path , class: "new_article" %>